macro psyche3
{psyche_init}
{psyche_right_chain}
{psyche_left_chain}
{psyche_center_chain}
{psyche_right_lock nowait}
pause 10
{psyche_left_lock nowait}
pause 10
{psyche_center_lock}
pause 10
endmacro

macro psyche2
{psyche_init}
{psyche_right_chain}
{psyche_left_chain}
{psyche_right_lock nowait}
pause 10
{psyche_left_lock}
pause 10
endmacro

macro psyche1
{psyche_init}
{psyche_center_chain}
{psyche_center_lock}
pause 2
endmacro

macro psyche_unlock
flag center_locked $0_u1_
flag left_locked $0_u2_
flag right_locked $0_u3_
goto $0_u4_

label $0_u1_
delflag center_locked
{psyche_unlock_center}
goto $0_u4_

label $0_u2_
delflag left_locked
{psyche_unlock_left}
goto $0_u4_

label $0_u3_
delflag right_locked
{psyche_unlock_right}
goto $0_u4_

label $0_u4_
endmacro